<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.OtherFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatImageView
                        android:background="@mipmap/hello_dog"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </android.support.v7.widget.CardView>
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/frag_two_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名字:"
                        android:textColor="@color/colorheise"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/frag_two_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/frag_two_username"
                        android:layout_marginTop="30dp"
                        android:text="邮箱:"
                        android:textColor="@color/colorheise"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/frag_two_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/frag_two_username"
                        android:text="广职吴彦祖"
                        android:textColor="@color/colorheise"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/frag2_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/frag_two_username"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@id/frag_two_email"
                        android:text="1214585092@qq.com"
                        android:textColor="@color/colorheise"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_calendar"/>
    </LinearLayout>

</ScrollView>


</LinearLayout>